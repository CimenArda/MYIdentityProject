@model UserViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/MessageLayout/Index.cshtml";
}




        <div class="col-sm-12">

<div class="card">
    <div class="card-header">
        <h5>Kullanıcı Bilgileri</h5>
        <span>Add class of <code>.form-control</code> with <code>&lt;input&gt;</code> tag</span>
    </div>
    <div class="card-block">
        <h4 class="sub-title">Profilim</h4>
        <form method="post">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Adınız Soyadınız</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="NameSurname" class="form-control">
                </div>
            </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Kullanıcı Adınız</label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="UserName" class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Email Adresiniz</label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="Email" class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Resim Yolu</label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="ImageUrl" class="form-control">
                    </div>
                </div>


            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Şifreniz</label>
                <div class="col-sm-10">
                        <input type="password" asp-for="Password" class="form-control">
                </div>
            </div>
            
            <button type="submit" class="btn btn-success btn-round waves-effect waves-light">Düzenle</button>

        </form>
      
            </div>
        </div>
        </div>
